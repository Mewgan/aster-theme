<section id="post" data-panel="post" class="col-3 pic-hl-text">
    <article>
        <div class="pic">
            <img src="{{ asset(post.thumbnail.path) }}" alt="{{ post.thumbnail.alt }}">
        </div><div class="hlblock">
            <h1>{{ post.title }}</h1>
        </div><div class="content">
            {{ post.content|raw }}
        </div>
    </article>
</section>
<script>
    document.title = "{{ field_render('meta_title', 'post@' ~ post.id) }}";
    $('meta[name=description]').attr('content', "{{ field_render('meta_description', 'post@' ~ post.id) }}");
    $('meta[name=keywords]').attr('content', "{{ field_render('meta_keywords', 'post@' ~ post.id) }}");
</script>