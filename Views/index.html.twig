{% extends template_from_string(data.website_layout) %}

{% block page %}

    <section id="about" data-panel="about" class="col-3 slider hl-text-slider">
        <article>
            <div class="hlblock">
                <h1>{{ field_render('welcome_title','page@'~data.page.id) }}</h1>
            </div>
            <div class="content">
                {{ field_render('welcome_text','page@'~data.page.id) | raw }}
            </div>

            {% set carrousel = field_render('carrousel','page@'~data.page.id) %}
            <div class="sliderwrapper slickexpandable">
                <div class="slick">
                    {% for slide in carrousel %}
                        <div class="slide imgLiquidCenterLeft"><img src="{{ img(slide.image.path) }}" alt="{{ slide.image.alt }}"></div>
                    {% endfor %}
                </div>
            </div>
        </article>
    </section>

    <section id="panorama" data-panel="panorama" class="col-2 panorama-left">
        {% set panorama = field_render('second_bloc_image','page@'~data.page.id) %}
        <article>
            <div class="hlblock">
                <h1>{{ field_render('second_bloc_title','page@'~data.page.id) }}</h1>
            </div><div class="content panorama" data-panorama="{{ img(panorama.path) }}" style="background-image: url({{ img(panorama.path) }}">
                <a class="pan_controls icon-salon_play"></a>
            </div>
        </article>
    </section>

    <section id="mastersvision" data-panel="mastersvision" class="col-3 pic-hl-text">
        {% set actu = field_render('third_post_bloc','page@'~data.page.id) %}
        <article>
            <div class="pic">
                <img src="{{ img(actu.thumbnail.path) }}" alt="{{ actu.thumbnail.alt }}">
            </div><div class="hlblock">
                <h1>{{ actu.title }}</h1>
            </div><div class="content">
                {{ actu.content|raw }}
            </div>
        </article>
    </section>

    {{ content_render('team') }}

    {{ content_render('price') }}

    <section id="testimonials" data-panel="testimonials" class="col-2 testimonials testimonials-left">
        {% set testimonial = field_render('testimonial','page@'~data.page.id) %}
        <article>
            <div class="hlblock">
                <h1>TÃ©moignages</h1>
            </div><div class="content slick">
                {% for test in testimonial %}
                    <div class="slide">
                        <div class="testimonial icon-salon_quote">
                            {{ test.text | raw }}
                            <span class="client-name">{{ test.user }}</span>
                        </div><!--testimonial-->
                    </div><!--slide-->
                {% endfor %}
            </div>
        </article>
    </section>

    <section id="snapshots" data-panel="snapshots" class="tophead polaroid">
        <article><div class="hlblock">
                <h1>Notre gallerie</h1>
            </div>
            <div class="polaroidgallery photostack hidebullets">
                <div>
                    {% set galleries = field_render('gallery','page@'~data.page.id) %}
                    {% for gallery in galleries %}
                    <figure>
                        <a class="photostack-img imgLiquid"><img src="{{ img(gallery.photo.path) }}" alt="{{ gallery.photo.alt }}"/></a>
                        <figcaption>
                            <h2 class="photostack-title">{{ gallery.title }}</h2>
                            <div class="photostack-back">
                                <p>{{ gallery.content }}</p>
                            </div>
                        </figcaption>
                    </figure>
                    {% endfor %}
                </div>
            </div><!--polaroidgallery-->
        </article>
    </section>

    {{ content_render('list_home_post') }}

{% endblock %}